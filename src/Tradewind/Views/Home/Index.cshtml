                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-success">$2B+</h3>
                    <p class="text-muted">Daily Volume</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-warning">99.9%</h3>
                    <p class="text-muted">Uptime</p>
                </div>
            </div>
            <div class="col-md-3 mb-4">
                <div class="stat-item">
                    <h3 class="display-4 fw-bold text-info">24/7</h3>
                    <p class="text-muted">Support</p>
                </div>
            </div>
