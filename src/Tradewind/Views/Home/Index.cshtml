@{
    ViewData["Title"] = "Tradewind - Navigate Your Success";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="display-3 fw-bold mb-4">
                    <span class="text-warning">Trade</span>wind
                </h1>
                <p class="lead mb-4">
                    Navigate your path to success with intelligent trading solutions and market insights.
                </p>
                <div class="d-flex gap-3">
                    <a href="#features" class="btn btn-warning btn-lg px-4">Get Started</a>
                    <a href="#about" class="btn btn-outline-light btn-lg px-4">Learn More</a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <div class="hero-illustration">
                    <i class="fas fa-chart-line fa-10x text-warning opacity-75"></i>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section id="features" class="py-5">
    <div class="container">
        <div class="row text-center mb-5">
            <div class="col-12">
                <h2 class="display-4 fw-bold mb-3">Why Choose Tradewind?</h2>
                <p class="lead text-muted">Empowering traders with cutting-edge technology and insights</p>
            </div>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-wind fa-3x text-primary"></i>
                        </div>
                        <h4 class="card-title">Swift Execution</h4>
                        <p class="card-text">
                            Lightning-fast trade execution with minimal latency. 
                            Catch market opportunities the moment they appear.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-brain fa-3x text-success"></i>
                        </div>
                        <h4 class="card-title">Smart Analytics</h4>
                        <p class="card-text">
                            Advanced AI-powered market analysis and predictive insights 
                            to help you make informed trading decisions.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 shadow-sm border-0">
                    <div class="card-body text-center p-4">
                        <div class="mb-3">
                            <i class="fas fa-shield-alt fa-3x text-info"></i>
                        </div>
                        <h4 class="card-title">Secure Platform</h4>
                        <p class="card-text">
                            Bank-grade security with multi-factor authentication 
                            and encrypted data transmission for peace of mind.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

